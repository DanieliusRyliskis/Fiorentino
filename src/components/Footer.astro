    </div>
    <div class="bg-[#2F2C24] py-3">
        <h5 class="text-center text-sm">
            {content.text[7]}<span id="copyright"></span>.
        </h5>
    </div>
</footer>

<script>
    const date = new Date();
    const copyright = document.getElementById('copyright');
    copyright.textContent = `${date.getFullYear()}`;
</script>
